                               FontSize="25" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>
                </Border>

                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="210*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="210*"/>
                    </Grid.ColumnDefinitions>

