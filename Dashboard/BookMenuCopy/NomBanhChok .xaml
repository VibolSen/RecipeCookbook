<Window x:Class="BookCook.BookMenu.NomBanhChok"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookCook.BookMenu"
        mc:Ignorable="d"
        Title="NomBanhChok" 
        Height="Auto" 
        Width="1000">
    <Grid Height="1035" Margin="0,0,10,0">
        <!-- Image Section -->
        <Image Source="C:\Users\ASUS.LAPTOP-AJL0QBUI\source\repos\BookCook\Image\Food\Authentic-Nom-Banh-Chok-Recipe.jpg" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Width="300" 
               Margin="20,20,0,0"/>

        <!-- Title Section -->
        <TextBlock Text="Nom Banh Chok (Khmer Noodle)" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="340,20,0,0" 
                   Foreground="Black"/>

        <!-- Additional Content (e.g., ingredients, description) -->
        <StackPanel Orientation="Vertical" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="340,68,0,0" Width="543">

            <TextBlock Text="Ingredients:" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="Black"/>

            <TextBlock FontWeight="Bold" Foreground="DeepPink">
                <TextBlock.Inlines>
                    <Run Text="  "/>
                    <Run Text="Green Fish Curry Sauce:" TextDecorations="Underline"/>
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock Text="• 1 lb (450g) fish fillets (such as catfish or tilapia) "/>
            <TextBlock Text="• 1 tablespoon turmeric powder or fresh turmeric, grated "/>
            <TextBlock Text="• 1 tablespoon lemongrass, finely chopped "/>
            <TextBlock Text="• 1 tablespoon galangal, finely chopped  "/>
            <TextBlock Text="• 2-3 kaffir lime leaves, finely chopped  "/>
            <TextBlock Text="• 3 cloves garlic "/>
            <TextBlock Text="• 2 shallots "/>
            <TextBlock Text="• 1 tablespoon fish sauce "/>
            <TextBlock Text="• 1 teaspoon sugar "/>
            <TextBlock Text="• 1 can (400ml) coconut milk "/>
            <TextBlock Text="• Salt, to taste "/>
            <TextBlock Text="• 2-3 cups water "/>
            <TextBlock FontWeight="Bold" Foreground="DeepPink">
                <TextBlock.Inlines>
                    <Run Text="  "/>
                    <Run Text="Noodles and Vegetables: " TextDecorations="Underline"/>
                </TextBlock.Inlines>
            </TextBlock>
            <!-- Negative margin pulls it up to align with the other title -->
            <TextBlock Text="• 500g (1.1 lbs) fresh rice noodles (or dried rice noodles, prepared according to package instructions)  "/>
            <TextBlock Text="• Bean sprouts "/>
            <TextBlock Text="• Cucumber, julienned "/>
            <TextBlock Text="• Green beans, blanched "/>
            <TextBlock Text="• Banana blossom, thinly sliced (optional) "/>
            <TextBlock Text="• Fresh herbs (mint, basil, cilantro) "/>
            <TextBlock Text="• Lime wedges  "/>
            <!-- Add more ingredients as needed -->
        </StackPanel>


        <!-- Preparation Method Section -->
      
            <StackPanel Orientation="Vertical" RenderTransformOrigin="0.49,0.516" Margin="0,435,0,238">
                <TextBlock Text="Preparation Method:" 
               FontSize="20" 
               FontWeight="Bold" 
               Foreground="Black" 
               Height="29"/>
                <TextBlock Foreground="DeepPink" FontWeight="Bold">
                    <TextBlock.Inlines>
                    <Run Text="  "/>
                    <Run Text="Prepare the Fish: " TextDecorations="Underline"/>
                </TextBlock.Inlines>
                </TextBlock>
                <TextBlock Text="• Poach the fish fillets in a pot of boiling water until fully cooked, then remove and set aside."/>
                <TextBlock Text="• Reserve the cooking water to use as fish stock. "/>
                <TextBlock Text="Make the Curry Paste:" TextDecorations="Underline" Foreground="DeepPink" FontWeight="Bold"/>
                <TextBlock Text="• In a mortar and pestle or food processor, combine turmeric, lemongrass, galangal, kaffir lime leaves, garlic, and shallots."/>
                <TextBlock Text="Pound or blend until a smooth paste forms."/>
                <TextBlock Text="Cook the Curry Sauce:" TextDecorations="Underline" Foreground="DeepPink" FontWeight="Bold"/>
                <TextBlock Text="• In a large pot, heat a small amount of oil over medium heat. Add the curry paste and cook until fragrant."/>
                <TextBlock Text="• Add the coconut milk, fish sauce, sugar, and salt. Stir well to combine."/>
                <TextBlock Text="• Add the cooked fish fillets and break them up into smaller pieces."/>
                <TextBlock Text="• Pour in the reserved fish stock and additional water as needed to achieve your desired consistency."/>
                <TextBlock Text="• Simmer the sauce for about 15-20 minutes to allow the flavors to meld."/>
                <TextBlock Text="Prepare the Noodles:" TextDecorations="Underline" Foreground="DeepPink" FontWeight="Bold"/>
                <TextBlock Text="• If using fresh rice noodles, briefly blanch them in boiling water to heat through, then drain."/>
                <TextBlock Text="• If using dried rice noodles, prepare according to package instructions and drain."/>
                <TextBlock Text="Assemble the Dish:" TextDecorations="Underline" Foreground="DeepPink" FontWeight="Bold"/>
                <TextBlock Text="• Place a portion of rice noodles in a serving bowl."/>
                <TextBlock Text="• Ladle the hot green fish curry sauce over the noodles."/>
                <TextBlock Text="• Top with bean sprouts, julienned cucumber, blanched green beans, banana blossom, and fresh herbs."/>
                <TextBlock Text="• Serve with lime wedges on the side for squeezing over the dish."/>
            </StackPanel>
                    
        <!-- Footer Section -->
        <TextBlock Text="Enjoy your delicious Nom Banh Chok!" 
               FontSize="18" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Bottom" 
               Margin="20,0,0,20" 
               Foreground="Black" Width="326" Height="29"/>
    </Grid>
</Window>
