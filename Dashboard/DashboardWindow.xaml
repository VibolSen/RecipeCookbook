<Window x:Class="RecipeCookbook.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" 
        Height="800" 
        Width="1400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#2C2F33">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#23272A">
            <Image Source="D:\1_STEP Acadermy\Project\WinForm(WPF)\RecipeCookbook\Image\DashboardWindow\logochefe.png" Width="150" Height="180"/>
            
            <Button Content="Dashboard" Click="DashboardButton_Click"/>
            
            <Button Content="Home" Click="HomeButton_Click"/>
            <Button Content="Country" Click="CountryButton_Click"/>
            <Button Content="Discount" />
            <Button Content="Categories" />
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <ContentControl x:Name="MainContentArea" Grid.Column="1" Margin="5"/>
        </Grid>

        <!-- Analytics Section -->
        <StackPanel Grid.Column="2" Margin="10,10,10,10">
            <Border Background="#4A4E69" CornerRadius="10" Padding="10" Margin="5">
                <StackPanel>
                    <TextBlock Text="Analytics" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Customers" Foreground="White" FontSize="14" Margin="5"/>
                    <TextBlock Text="315k" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#4A4E69" CornerRadius="10" Padding="10" Margin="5">
                <StackPanel>
                    <TextBlock Text="Delivered" Foreground="White" FontSize="14" Margin="5"/>
                    <TextBlock Text="159k" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
